<h1>Timeline</h1>
<ul class="posts">
  {{#each posts}}
  <div>
    <li >{{this.message}} - {{this.createdAt}}</li>
    <!-- create a comment on the post -->
    <form id="new-comment-form" action="/posts/{{this._id}}" method="post">
      <input id="message" type="text" name="message" value="" placeholder="Comment here">
      <input type="submit" value="Submit">
    </form>
    {{#each this.comments}}
      <li>{{this.name}} - {{this.message}} - {{this.createdAt}}</li>
    {{/each}}
  </div>
  {{/each}}
</ul>

<a class="new-post-link" href="/posts/new">New post</a>
