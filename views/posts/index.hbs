<h1>Timeline</h1>
<ul class="posts">
  {{#each posts}}

  <li ><div><!-- profile picture goes here -->{{../session.user.name}} -- {{this.createdAt}}</div>
        <div>{{this.message}} 
          <form method="POST" action="/posts/like">
          <input type="hidden" value="{{this._id}}" name="postId">
          <input type="hidden" value="{{../session.user._id}}" name="userId">
          <input type="submit" value="Like" id="like-button">{{this.likes.length}}
          </form></div> 
  </li>
  
  {{/each}}
</ul>

<a class="new-post-link" href="/posts/new">New post</a>
